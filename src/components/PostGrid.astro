---
// src/components/PostGrid.astro
interface Post {
  slug: string;
  data: {
    title: string;
    excerpt?: string;
    date?: string;
    coverImage?: string;
  };
}
const { posts = [] }: { posts?: Post[] } = Astro.props;
---

<div class="max-w-5xl mx-auto mt-20 px-4 grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
  {posts.map((post) => (
    <a
      href={`/posts/${post.slug}`}
      class="group block overflow-hidden rounded-xl border border-white/20 bg-white/60 dark:bg-black/40 backdrop-blur-md shadow-sm transition-transform duration-200 hover:scale-105 hover:shadow-xl"
    >
      {/* Imagen portada */}
      {post.data.coverImage && (
        <img
          src={post.data.coverImage}
          alt={post.data.title}
          class="w-full h-48 object-cover"
        />
      )}

      {/* Contenido */}
      <div class="p-4 space-y-2">
        <h2 class="text-lg font-semibold text-black dark:text-white group-hover:text-indigo-500 transition">
          {post.data.title}
        </h2>
        {post.data.excerpt && (
          <p class="text-sm text-zinc-600 dark:text-zinc-400">{post.data.excerpt}</p>
        )}
        {post.data.date && (
          <span class="text-xs text-zinc-500 dark:text-zinc-500">
            {new Date(post.data.date).toLocaleDateString()}
          </span>
        )}
      </div>
    </a>
  ))}
</div>