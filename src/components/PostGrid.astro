---
interface Post {
  title: string;
  slug: string;
  excerpt?: string;
  date?: string;
}
const { posts = [] }: { posts?: Post[] } = Astro.props;
---

<div class="max-w-3xl mx-auto mt-20 px-4">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    {posts.map((post) => (
      <a
        href={`/posts/${post.slug}`}
        class="group block p-4 bg-white/70 dark:bg-black/40 border border-white/20 backdrop-blur-sm rounded-xl shadow-sm transition-transform duration-200 hover:scale-105 hover:shadow-md"
      >
        <h2 class="text-lg font-semibold text-black dark:text-white mb-1">
          {post.title}
        </h2>
        {post.excerpt && (
          <p class="text-sm text-zinc-600 dark:text-zinc-400 mb-2">
            {post.excerpt}
          </p>
        )}
        {post.date && (
          <span class="text-xs text-zinc-500 dark:text-zinc-500">
            {new Date(post.date).toLocaleDateString()}
          </span>
        )}
      </a>
    ))}
  </div>
</div>