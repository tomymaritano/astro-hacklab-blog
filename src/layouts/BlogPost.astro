---
// src/components/BlogPost.astro
const { post, Content } = Astro.props;
---

<article class="bg-white dark:bg-black min-h-screen flex flex-col items-center">
  {post.data.coverImage && (
    <div class="w-full h-[40vh] overflow-hidden relative mb-8">
      <img
        src={post.data.coverImage}
        alt={post.data.title}
        class="w-full h-full object-cover opacity-90 hover:opacity-100 transition-opacity"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent" />
    </div>
  )}

  <div class="w-full max-w-3xl px-4 sm:px-6 lg:px-8 pb-12">
    <h1 class="text-3xl md:text-4xl font-bold text-black dark:text-white mb-2">
      {post.data.title}
    </h1>
    {post.data.date && (
      <time class="text-zinc-500 dark:text-zinc-400 text-sm mb-4 block">
        {new Date(post.data.date).toLocaleDateString()}
      </time>
    )}

    <Content class="prose dark:prose-invert prose-zinc max-w-none" />
  </div>
</article>